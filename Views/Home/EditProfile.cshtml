@model Profile

@if (Model == null)
{

}
else
{
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <a href="javascript: history.go(-1)" class="btn btn-secondary mb-3">Back</a>
            </div>
        </div>
        <h2>Edit Profile</h2>
        <hr />
        <form asp-action="EditProfile" method="post">
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="FavoriteGame" />
            <div class="mb-3">
                <label asp-for="Image" class="form-label">Profile Image (Link)</label>
                <input asp-for="Image" class="form-control" placeholder="Enter the URL of the image" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Bio" class="form-label">Bio</label>
                <textarea asp-for="Bio" class="form-control"></textarea>
            </div>
            <div class="mb-3">
                <label asp-for="Birthday" class="form-label">Birthday</label>
                <input asp-for="Birthday" class="form-control" type="date" />
            </div>
            <div class="mb-3">
                <label asp-for="Location" class="form-label">Location</label>
                <input asp-for="Location" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>
    </div>
}