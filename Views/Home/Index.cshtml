@{
    ViewData["Title"] = "PlatHub - Your Game Library";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Welcome to PlatHub</h1>
        <p>Your game library manager.</p>
         <img src="/images/PlatHubDarkLogo.png" alt="PlatHub Logo" class="mt-3" style="max-width: 200px; height: auto;">
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><a asp-controller="Home" asp-action="Search" class="stretched-link">Search Games</a></h5>
                    <p class="card-text">Find all games in any library.</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><a asp-controller="Home" asp-action="Library" class="stretched-link">Manage Library</a></h5>
                    <p class="card-text">Organize, update, and curate your game collection.</p>
                </div>
            </div>
        </div>
    </div>
</div>
